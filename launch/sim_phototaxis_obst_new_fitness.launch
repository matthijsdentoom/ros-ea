<launch>

    <arg name="time_steps" default="600"/>
    <arg name="num_inputs" default="24"/>
    <arg name="num_outputs" default="2"/>
    <arg name="controller" default="state-machine"/>
    <arg name="exp_folder" default="/home/matthijs/Documents/ros_ws/src/ma_evolution"/>

    <group ns="sim1">
        <node pkg="ma_evolution" type="argos_launcher.py" name="argos_launcher" output="screen"
              args="$(arg exp_folder)/argos_worlds/obstacle_light_new_fitness_1.argos" />

        <node pkg="ma_evolution" type="argos_experiment_runner.py" name="argos_experiment_runner" output="screen"
              args="$(arg controller) $(arg time_steps) $(arg num_inputs) $(arg num_outputs)" />
    </group>

    <group ns="sim2">
        <node pkg="ma_evolution" type="argos_launcher.py" name="argos_launcher" output="screen"
              args="$(arg exp_folder)/argos_worlds/obstacle_light_new_fitness_2.argos" />

        <node pkg="ma_evolution" type="argos_experiment_runner.py" name="argos_experiment_runner" output="screen"
              args="$(arg controller) $(arg time_steps) $(arg num_inputs) $(arg num_outputs)" />
    </group>

    <group ns="sim3">
        <node pkg="ma_evolution" type="argos_launcher.py" name="argos_launcher" output="screen"
              args="$(arg exp_folder)/argos_worlds/obstacle_light_new_fitness_3.argos" />

        <node pkg="ma_evolution" type="argos_experiment_runner.py" name="argos_experiment_runner" output="screen"
              args="$(arg controller) $(arg time_steps) $(arg num_inputs) $(arg num_outputs)" />
    </group>

    <group ns="sim4">
        <node pkg="ma_evolution" type="argos_launcher.py" name="argos_launcher" output="screen"
              args="$(arg exp_folder)/argos_worlds/obstacle_light_new_fitness_4.argos" />

        <node pkg="ma_evolution" type="argos_experiment_runner.py" name="argos_experiment_runner" output="screen"
              args="$(arg controller) $(arg time_steps) $(arg num_inputs) $(arg num_outputs)" />
    </group>

</launch>
